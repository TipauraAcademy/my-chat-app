# Server Configuration
PORT=3000
NODE_ENV=production

# Railway specific
RAILWAY_STATIC_URL=
RAILWAY_PUBLIC_DOMAIN=

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=enhanced-chat-jwt-secret-key-change-this-in-production-railway-deployment-2024
SESSION_SECRET=enhanced-chat-session-secret-change-this-in-production-railway

# File Upload Limits
MAX_FILE_SIZE=52428800
# 50MB in bytes (50 * 1024 * 1024)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds (15 * 60 * 1000)
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=chat_app
# DB_USER=chat_user
# DB_PASSWORD=your_db_password

# Redis Configuration (for future scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Cloud Storage (for file uploads)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-chat-bucket

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Application Settings
APP_NAME=Enhanced Group Chat
APP_VERSION=1.0.0
MAX_MESSAGE_LENGTH=1000
MAX_GROUP_MEMBERS=100
MESSAGE_HISTORY_LIMIT=1000

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Development/Debug
DEBUG=false
VERBOSE_LOGGING=false
